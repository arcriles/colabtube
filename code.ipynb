import yt_dlp
import base64
from IPython.display import HTML, display, clear_output

# 1. CLI Search Input
query = input("Enter tutorial search query: ")
print(f"\nScraping top 10 results for: '{query}'...")

# 2. Fetch Metadata
search_opts = {
    'extract_flat': 'in_playlist',
    'quiet': True,
    'default_search': 'ytsearch10'
}

with yt_dlp.YoutubeDL(search_opts) as ydl:
    info = ydl.extract_info(query, download=False)
    entries = info.get('entries', [])

if not entries:
    print("No results found.")
else:
    print("\n" + "="*50)
    for i, entry in enumerate(entries):
        title = entry.get('title', 'Unknown Title')
        duration = entry.get('duration_string', 'N/A')
        print(f"[{i + 1}] {title} (Duration: {duration})")
    print("="*50)

    # 3. CLI Selection Input
    try:
        choice = int(input("\nSelect video number to download and play (1-10): ")) - 1

        if 0 <= choice < len(entries):
            selected_url = entries[choice].get('url')
            selected_title = entries[choice].get('title')

            clear_output()
            print(f"Downloading: '{selected_title}'")
            print("Enforcing H.264 codec and 480p cap to prevent browser Out-Of-Memory (OOM) crashes...")

            file_path = 'cli_tutorial_payload.mp4'

            # Enforce strict HTML5 compatible codecs and limit resolution
            dl_opts = {
                'format': 'bestvideo[vcodec^=avc1][height<=480]+bestaudio[acodec^=mp4a]/best[vcodec^=avc1][height<=480]/best',
                'outtmpl': file_path,
                'merge_output_format': 'mp4',
                'quiet': True,
                'overwrite': True
            }

            with yt_dlp.YoutubeDL(dl_opts) as ydl:
                ydl.download([selected_url])

            print("Download complete. Encoding to Base64 and injecting into DOM...")

            # 4. Base64 Encoding for Isolated Playback
            with open(file_path, 'rb') as f:
                video_b64 = base64.b64encode(f.read()).decode('utf-8')

            data_uri = f"data:video/mp4;base64,{video_b64}"

            # 5. Render HTML5 Player
            html_code = f"""
            <div style="background: #1e1e1e; padding: 15px; border-radius: 8px; width: max-content;">
                <h3 style="color: white; margin-top: 0; font-family: monospace;">{selected_title}</h3>
                <video width="800" controls controlsList="nodownload">
                    <source src="{data_uri}" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
                <p style="color: #aaaaaa; font-family: monospace; font-size: 12px;">
                    Right-click the video and select "Picture in Picture" for a floating desktop miniplayer.
                </p>
            </div>
            """
            clear_output()
            display(HTML(html_code))

        else:
            print("Error: Selection out of bounds.")

    except ValueError:
        print("Error: Invalid input. Must be an integer.")
